// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

model User {
    id        Int             @id @default(autoincrement())
    createdAt DateTime        @default(now())
    name      String?
    email     String          @unique
    admin     Boolean         @default(false)
    spreads   Spread[]
    uploads   Media[]
    refs      CardReference[]
}

model Spread {
    id        Int        @id @default(autoincrement())
    createdAt DateTime   @default(now())
    userId    Int
    user      User       @relation(fields: [userId], references: [id])
    name      String
    date      DateTime   @default(now())
    notes     String?
    template  Boolean    @default(false)
    positions Position[]
    media     Media[]

    @@index([userId, template])
}

model Position {
    id       Int     @id @default(autoincrement())
    spreadId Int
    spread   Spread  @relation(fields: [spreadId], references: [id], onDelete: Cascade)
    name     String
    card     String?
    reversed Boolean @default(false)
    suit     String?
    notes    String?
}

model Media {
    createdAt DateTime @default(now())
    path      String   @id
    type      String
    width     Int?
    height    Int?
    spreadId  Int?
    spead     Spread?  @relation(fields: [spreadId], references: [id], onDelete: SetNull)
    deleted   Boolean  @default(false)
    userId    Int?
    user      User?    @relation(fields: [userId], references: [id], onDelete: SetNull)

    @@index([spreadId, deleted])
}

model CardReference {
    id        Int      @id @default(autoincrement())
    createdAt DateTime @default(now())
    card      String
    text      String
    source    String?
    keywords  String?
    reversed  Boolean  @default(false)
    userId    Int
    user      User     @relation(fields: [userId], references: [id])

    @@index([userId, card])
    @@index([userId, source])
}

// TODO: Add deck models to support differently named cards

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "sqlite"
    url      = env("DATABASE_URL")
}
